<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<MainButtonDef>
		<defName>TD_List</defName>
		<label>Find</label>
		<description>Find and list things on the map.</description>
		<tabWindowClass>List_Everything.MainTabWindow_List</tabWindowClass>
		<order>95</order>
